@using OnlineBanking.Domain.ViewModel.User;
@model UserProfileViewModel

<div class="container">
    <form>
        <div class="row">
            <div class="col-md-12">
                @if (Model.Avatar == null && Model.Image == null)
                {
                    <img class="img-fluid rounded-start rounded" src="~/images/\default-avatar.jpeg">
                    <label class="col-form-label">Изображение</label>
                    <input asp-for="@Model.Avatar" class="form-control" type="file">
                }
                else
                {
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model?.Image ?? Array.Empty<byte>())"
                         class="img-fluid rounded-start rounded">
                }
            </div>
        </div>
       
    </form>
    
</div>

